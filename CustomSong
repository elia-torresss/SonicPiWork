  play :G4
  sleep 1
  play :E5
  play :G4
  sleep 1
  play :G5
  sleep 1
  play :D5
  play :B4
  sleep 1
  play :E5
  sleep 0.250
  play :E5
  play :G4
  sleep 0.750
end

